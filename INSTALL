# Установка всех необходимых модулей: perl ./INSTALL
# На все появляющиеся вопросы жмякаем Enter
# Для распознавания капчи с помощью tesseract нужно установить пакет tesseract-ocr и imagemagick
#
# Проверялось на Ubuntu 12.04 LTS

use strict;

my @base = qw/
AnyEvent
Carp
Coro
Data::Random
EV
Getopt::Long 
HTML::Entities
List::MoreUtils
List::Util
Term::ANSIColor
Data::Random
/;

my @checker = qw/
WWW::ProxyChecker
/;

my @ocr = qw/
YAML
Image::OCR::Tesseract
/;

system "sudo cpan @base @checker @ocr";
